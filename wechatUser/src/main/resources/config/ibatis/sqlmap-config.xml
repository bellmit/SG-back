<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMapConfig      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-config-2.dtd">

<sqlMapConfig>
	<settings useStatementNamespaces="true" maxRequests="256" maxSessions="64" maxTransactions="16"  cacheModelsEnabled="true" enhancementEnabled="true" lazyLoadingEnabled="true"/>
        <!-- 微信用户 -->
        <sqlMap resource="config/sqlmap/WXUser_SqlMap.xml"/>
        <!-- 微信用户的收货地址 -->
        <sqlMap resource="config/sqlmap/WXUserAddress_SqlMap.xml"/>
	<!-- 订单 -->
        <sqlMap resource="config/sqlmap/Order_SqlMap.xml"/>
</sqlMapConfig>